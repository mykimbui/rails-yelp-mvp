<h1 class="text-center">Restaurants</h1>

<div class=text-center>
 <%= link_to 'Create a new restaurant', new_restaurant_path, class: "btn btn-danger" %>
</div>

<div class="container">
 <div class="row">
   <% @restaurants.each do |resto| %>
   <div class="col-xs-12 col-sm-6 col-md-4">
     <%= render "card", restaurant: resto %>
     <%= link_to "Edit", edit_restaurant_path(resto), class: "btn btn-primary" %>
     <%= link_to "Delete", restaurant_path(resto), method: :delete, class: "btn btn-primary", :confirm => "Really?" %>
     <%= link_to "Review", new_restaurant_review_path(resto) , class: "btn btn-primary"%>
   </div>
   <% end %>
 </div>


</div>
